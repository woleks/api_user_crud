{% extends 'base.html.twig' %}

{% block title %}Your api tokens{% endblock %}

{% block body %}
    <h1>ApiToken</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ token.id }}</td>
        </tr>
        <tr>
            <th>Token</th>
            <td>{{ token.token }}</td>
        </tr>
        <tr>
            <th>ExpiresAt</th>
            <td>{{ token.expiresAt ? token.expiresAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('user_api_token_index') }}">back to list</a>

    {{ include('user_api_token/_delete_form.html.twig') }}
{% endblock %}
