{% extends 'base.html.twig' %}

{% block title %}Home Page{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Home Page</h1>
        {% if app.user %}
            You are logged in as {{ app.user.email }}
        {% endif %}
        <hr>
        Actions
        <ul>
            {% if not app.user %}
                <li><a href="{{ path('app_register') }}">Register</a></li>
                <li><a href="{{ path('app_login') }}">Login</a></li>
            {% else %}
                <li><a href="{{ path('user_api_token_index') }}">My API Tokens</a></li>
                <li><a href="{{ path('app_logout') }}">Logout</a></li>
            {% endif %}
        </ul>
    </div>
{% endblock %}
